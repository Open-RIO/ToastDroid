<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:support="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="jaci.openrio.module.android.fragments.TileFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        support:cardCornerRadius="3dp"
        support:cardBackgroundColor="@color/dark_title"
        android:id="@+id/card"
        support:cardElevation="0dp">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:layout_margin="5dp"
                android:animateLayoutChanges="true">
                <TextView
                    android:text="My Card"
                    android:textSize="20sp"
                    android:textColor="@color/light_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"/>
                <TextView
                    android:text="Subtitles"
                    android:textSize="12sp"
                    android:textColor="@color/light_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitles"/>
            </GridLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
